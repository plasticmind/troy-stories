<!DOCTYPE html>
<html lang="en">
<head>

  {% block head %}
  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <title>{% if header.title %}{{ header.title }} | {% endif %}{{ site.title }}</title>
  <meta charset="utf-8">
  <meta name="author" content="Jesse Gardner">
  {% if header.robots %}
  <meta name="robots" content="{{ header.robots }}">
  {% endif %}

  {% for meta in page.metadata %}
  <meta {% if meta.name %}name="{{ meta.name }}" {% endif %}{% if meta.http_equiv %}http-equiv="{{ meta.http_equiv }}" {% endif %}{% if meta.charset %}charset="{{ meta.charset }}" {% endif %}{% if meta.property %}property="{{ meta.property }}" {% endif %}{% if meta.content %}content="{{ meta.content }}" {% endif %}/>
  {% endfor %}

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="//fonts.googleapis.com/css?family=Crimson+Text:400,700|Raleway:500,600" rel="stylesheet" type="text/css">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

  {% block stylesheets %}
    {% do assets.add('theme://css/normalize.css',101) %}
    {% do assets.add('theme://css/styles.css',104) %}
    {{ assets.css() }}
  {% endblock %}

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon.png">

  <!-- Scripts
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-70617067-1', 'auto');
    ga('send', 'pageview');

  </script>

  {% endblock head %}

</head>

{% block body %}
<body class="page-home">
{% endblock %}

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="container">

    {% block header %}
    {% include 'partials/header.html.twig' %}
    {% endblock %}

    <!-- Body -->

    {% block content %}{% endblock %}

    {% block footer %}
      {% include 'partials/footer.html.twig' %}
    {% endblock %}

  </div>

  <!-- Moar Scripts
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

  {# Footer JS #}
  {% block javascripts %}
    {% do assets.add('theme://js/jquery-3.1.1.min.js') %}
    {% do assets.add('theme://js/masonry.min.js') %}
    {% do assets.add('theme://js/ts.js','1.3') %}
    
    {# ... #}
    {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
        {% do assets.add('https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js') %}
        {% do assets.add('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') %}
    {% endif %}

    {{ assets.js() }}
  {% endblock %}


<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->  
</body>
{% block bottom %}{% endblock %}
</html>
